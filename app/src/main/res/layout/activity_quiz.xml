<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity"
    android:padding="15dp"
    android:background="@color/quizBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_previous_text"
            android:textSize="20sp"
            android:textColor="@color/quizButton"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:textStyle="bold"/>


        <!-- Quiz Number -->
        <TextView
            android:id="@+id/tvQuizNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginStart="50dp"
            android:text="@string/tv_quiz_number_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <!-- QuizQuestion Box -->
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/question_box_bg"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:padding="15dp"
            android:text="@string/tv_question_text" />

        <!-- Options -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">


            <RadioButton
                android:id="@+id/rbOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_design_bg"
                android:layout_marginBottom="20dp"
                android:text="@string/rd_option_text"
                android:textColor="@color/selected_option_color"
                android:textSize="20sp"
                android:padding="10dp"
                android:layoutDirection="rtl"/>

            <RadioButton
                android:id="@+id/rbOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_design_bg"
                android:layout_marginBottom="20dp"
                android:text="@string/rd_option_text"
                android:textColor="@color/selected_option_color"
                android:textSize="20sp"
                android:padding="10dp"
                android:layoutDirection="rtl"/>

            <RadioButton
                android:id="@+id/rbOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/option_design_bg"
                android:layout_marginBottom="20dp"
                android:text="@string/rd_option_text"
                android:textColor="@color/selected_option_color"
                android:textSize="20sp"
                android:padding="10dp"
                android:layoutDirection="rtl"/>

            <RadioButton
                android:id="@+id/rbOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rd_option_text"
                android:textSize="18sp"
                android:textColor="@color/selected_option_color"
                android:background="@drawable/option_design_bg"
                android:layoutDirection="rtl" />



        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_next_text"
        android:textSize="20sp"
        android:backgroundTint="@color/quizButton"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:padding="15dp"



        />




</LinearLayout>