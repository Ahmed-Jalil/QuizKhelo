<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image">

    <!-- Curved Background with Image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_curve_image"
        android:paddingTop="20dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back_arrow"/>

        <!-- Scoreboard Text -->
        <TextView
            android:id="@+id/tv_scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/tv_scoreboard_text"
            android:textColor="@color/quizButton"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_scoreboard"
            android:layout_centerHorizontal="true"
            android:text="@string/tv_main_hint_text"
            android:textColor="@color/quizButton"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="20dp"/>

        <!-- Score -->
        <TextView
            android:id="@+id/tvUserScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserName"
            android:layout_centerHorizontal="true"
            android:text="@string/tv_score_display_text"
            android:textColor="@color/quizButton"
            android:textSize="14sp"
            android:paddingTop="5dp"/>
    </RelativeLayout>

    <!-- Share Score Button -->
    <Button
        android:id="@+id/btnShareScore"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:padding="15dp"
        android:backgroundTint="@color/quizButton"
        android:text="@string/btn_share_score"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>




        />
</LinearLayout>
